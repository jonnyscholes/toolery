			.container--row.unit-conversions
				.unit-conversions--title.container--row-title Units
				.unit-conversions--table.data-table.js-unit-conversions
					.data-table--cell -

			.container--row.color-conversions
				.color-conversions--title.container--row-title Colors
				.color-conversions--variable.js-color-variable
				.color-conversions--table.data-table.js-color-table
					.data-table--cell -

			.container--row.misc-metrics
				.misc-metrics--title.container--row-title Other
				.misc-metrics--table.data-table
					.misc-metrics--table-single.data-table--cell.js-char-count
					.misc-metrics--table-single.data-table--cell.js-word-count
					.misc-metrics--table-single.data-table--cell.js-key-code

			.container--row.color-list.js-color-list

