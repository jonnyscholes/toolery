doctype html
html(manifest="toolery.appcache")
	head
		meta(charset='utf-8')
		meta(content='IE=edge', http-equiv='X-UA-Compatible')
		title toolery.me
		meta(content='width=device-width, initial-scale=1', name='viewport')
		link(href='http://fonts.googleapis.com/css?family=Source+Code+Pro:400,300', rel='stylesheet', type='text/css')
		link(href='css/app.css', rel='stylesheet')

	body
		.paste-zone
			.error
			input.paste-zone--input(type="text", name="rgbinput", id="rgbinput", placeholder="Paste a value here.")

		.container
			.container--row.wcag
				.wcag--title.container--row-title WCAG
				.wcag--title.js-wcag-result
